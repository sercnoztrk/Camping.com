<% include ../partials/header %>

    <div class="container">
        <h1 style="text-align: center">Add a New Comment to <%= campground.name %></h1>

        <form action="/campgrounds/<%= campground._id %>/comments" method="post" style="margin: 25px auto; width: 40%">
            <div class="form-group">
                <input class="form-control" type="text" name="commentInput[text]" placeholder="Enter Comment...">
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn-lg btn-primary btn-block">Add Comment</button>
            </div>
            
            <a href="/campgrounds">Back</a>
        </form>
    </div>
    
<% include ../partials/footer %>